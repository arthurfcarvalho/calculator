<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#6200EE</item>
        <item name="colorPrimaryDark">#3700B3</item>
        <item name="colorAccent">#03DAC5</item>
    </style>

    <!-- Estilo para o display da calculadora -->
    <style name="DisplayStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">end</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:background">#EEEEEE</item>
        <item name="android:padding">16dp</item>
    </style>

    <!-- Estilo para os botões da calculadora -->
    <style name="CalcButtonStyle">
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:textSize">24sp</item>
        <item name="android:backgroundTint">#D3D3D3</item>
        <item name="android:textColor">#000000</item>
    </style>

    <!-- Estilo para o botão de operação -->
    <style name="OperationButtonStyle" parent="CalcButtonStyle">
        <item name="android:backgroundTint">#FFA726</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

</resources>